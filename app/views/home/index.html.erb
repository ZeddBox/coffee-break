<div class="page-header header-filter background-image gradient" data-parallax="true">
  <div class="container">
    <div class="row mb-5">
      <div class="col-md-12 text-center mb-5">
        <div class="brand brand-title">
          <div class="logo">
            <%= image_tag 'https://res.cloudinary.com/coffeebreak-pro/image/upload/c_scale,w_150/v1600907495/Coffee_Break_Logo_White_-_NoTitle2_cuqgr2.png', class: "vcenter"%>
            <h1 class="title website-title vcenter">COFFEE BREAK</h1>
          </div>
          <h3 class="website-subtitle">Maintenance & Entretien de machine à café professionnelle </h3>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main main-raised">
  <div class="container">
    <!-- Services Section -->
    <div class="section text-center">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto" id="services">
          <h2 class="subtitle">Mes services</h2>
          <h5 class="description">Je mets mes compétences techniques et cafés au service de votre machine professionelle. Je peux intervenir pour :</h5>
        </div>
      </div>
      <div class="features">
        <div class="row">
          <div class="col-md-4">
            <div class="info">
              <div class="icon icon-info">
                <i class="material-icons">local_cafe</i>
              </div>
              <h4 class="subtitle mt-3">Des soucis d'extractions</h4>
              <p>Café sous/sur-extrait</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info">
              <div class="icon icon-success">
                <i class="material-icons">build</i>
              </div>
              <h4 class="subtitle mt-3">De l'entretien courant</h4>
              <p>Joins, douchettes, adoucisseurs, groupes bouchés, réglage moulin...</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info">
              <div class="icon icon-danger">
                <i class="material-icons">shopping_cart</i>
              </div>
              <h4 class="subtitle mt-3">Des besoins matériels</h4>
              <p>Machines à café, moulins, machines à glaçons, laves verres...</p>
            </div>
          </div>
        </div>
      </div>
    </div>


    <!-- Map Card -->
    <%= render 'map' %>

    <!-- Contact Form -->
    <%= render 'contact/form' %>
  </div>
</div>

<%= render 'footer' %>